{
  "manifest_version": 3,
  "name": "ChatGPT Conversation Saver (Floating Button)",
  "version": "1.1.0",
  "description": "Adds a floating button to save the full ChatGPT conversation as TXT or PDF.",
  "permissions": ["storage"],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.openai.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ]
}
